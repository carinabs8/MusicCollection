<h1><%= t(:new, scope: [:album]) %></h1>
<div class="row">
	<%= simple_form_for(@album) do |f| %>
	  <%= f.input :name, required: false, placeholder: true %>
	  <%= f.input :artist_name, required: false, placeholder: true  %>
	  <%= f.input :twitter, required: false, placeholder: true  %>
	  <%= f.input :artist_id, collection: @album.artists_collection, required: false, placeholder: true  %>
	  <%= f.input :year, equired: false, placeholder: true  %>
	  <div class="form-group form-actions">
	    <%= f.submit t('create'), { :class => "btn btn-primary btn-user btn-block" } %>
	  </div><!--/form-group-->
	<% end %>
</div>